generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ArticleCategory {
  PROJECT_NEWS
  TUTORIAL
  OPINION
  REVIEW
  HR_HOLIDAYS

}


// Enum pour les statuts des articles
enum ArticleStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}


// Table des utilisateurs
model User {
  id          String   @id @default(cuid())
  email       String   @unique
  firstName   String
  lastName    String
  jobTitle    String?
  role        UserRole @default(EMPLOYEE)
  password    String
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  admin     Boolean  @default(false)
  accountLockedUntil  DateTime? // pour bloquer l'utilisateur temporairement
  failedLoginAttempts Int       @default(0)
  refreshToken        String?   // pour le token de rafra√Æchissement
  otp               String?    
  otpExpires        DateTime?  
  lastPasswordResetAt   DateTime?

  // Relations
 
  articles Article[]
  subscriptions         UserTopicSubscription[]
  readArticles          UserArticleRead[]
  //externalContentViews  ExternalContentView[]

  @@map("users")
}

// Enum pour les r√¥les utilisateurs
enum UserRole {
  EMPLOYEE
  MANAGER
  ADMIN
}

// Table des sujets d'int√©r√™t
model Topic {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
   articles          Article[]              @relation("TopicArticles")   
   subscriptions    UserTopicSubscription[]
   externalContents ExternalContent[]
   scrapingSources  ScrapingSource[]

  @@map("topics")
}

// Table de liaison pour les abonnements utilisateurs aux sujets
model UserTopicSubscription {
  id        String   @id @default(cuid())
  userId    String
  topicId   String
  createdAt DateTime @default(now())

  // Relations
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  topic Topic @relation(fields: [topicId], references: [id], onDelete: Cascade)

  @@unique([userId, topicId])
  @@map("user_topic_subscriptions")
}

// Table des articles internes
model Article {
  id          String          @id @default(cuid())
  title       String
  content     String
  summary     String?
  url         String?          // üëà Lien vers la vid√©o ou blog
  source      String?          // 'YouTube', 'Dev.to', etc.
  category    ArticleCategory
  status      ArticleStatus   @default(DRAFT)
  publishedAt DateTime?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  authorId    String
  topicId     String?
  // Relations
  author     User              @relation(fields: [authorId], references: [id])
  topic      Topic?   @relation("TopicArticles", fields: [topicId], references: [id]) 
   readBy     UserArticleRead[]
  // tags      ArticleTag[]

  @@map("articles")
}

 // Table des sources de scraping
model ScrapingSource {
  id          String   @id @default(cuid())
  name        String
  url         String
  sourceType  String @default("YOUTUBE")
  selector    String? // S√©lecteur CSS pour le scraping
  isActive    Boolean  @default(true)
  lastScrapedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  topicId     String

  // Relations
  topic Topic @relation(fields: [topicId], references: [id])

  @@map("scraping_sources")
}

// Table des logs de scraping
model ScrapingLog {
  id              String   @id @default(cuid())
  sourceUrl       String
  status          String   // SUCCESS, ERROR, WARNING
  message         String?
  itemsScraped    Int      @default(0)
  executionTime   Int?     // en millisecondes
  createdAt       DateTime @default(now())

  @@map("scraping_logs")
}

// Table des notifications (optionnel pour futures √©volutions)
model Notification {
  id        String   @id @default(cuid())
  userId    String
  title     String
  message   String
  type      String   // INFO, WARNING, SUCCESS, ERROR
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  @@map("notifications")
}

 // Table des contenus externes (scrapp√©s)
model ExternalContent {
  id          String              @id @default(cuid())
  title       String
  url         String              @unique
  summary     String?
  content     String?
  author      String?
  source      String
  type        ExternalContentType
  publishedAt DateTime?
  scrapedAt   DateTime            @default(now())
  isActive    Boolean             @default(true)
  topicId     String

  // Relations
  topic Topic                 @relation(fields: [topicId], references: [id])
  // views ExternalContentView[]

  @@map("external_contents")
}

// Enum pour les types de contenu externe
enum ExternalContentType {
  ARTICLE
  VIDEO
  COURSE
  TUTORIAL
}

// Table pour tracker les lectures d'articles
model UserArticleRead {
  id        String   @id @default(cuid())
  userId    String
  articleId String
  readAt    DateTime @default(now())

  // Relations
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  article Article @relation(fields: [articleId], references: [id], onDelete: Cascade)

  @@unique([userId, articleId])
  @@map("user_article_reads")
}
